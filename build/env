#---------------------------------------------------------------
# required user settings

umask 002

declare -i number_cores=4
if [ -e /proc/cpuinfo ]; then
  number_cores=$(egrep "^processor" /proc/cpuinfo | wc -l)
fi
declare -i number_proc=$((number_cores * 2))

alias mk="make color=yes j=$number_proc"
alias imk="make color=yes j=64 quiet=yes -j64"

export useful_aliases="mk"

unset number_cores number_proc

